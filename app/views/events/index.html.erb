<div class="event-index">
  <div class="events-list">
    <div class="events-title">
      <h5>EVENTS: </h5>
    </div>
    <div class="events">
      <div class="events-past">
        <h3>PAST EVENTS:</h3>
        total(<%= Event.past.all.count %>)<br><br>
        <% @events.each do |event| %>
          <% if event.date.past? %>
            <div class="event">
              DATE: <b><%= event.date %></b>:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              HOST: <b><%= link_to event.creator.username, user_path(event.creator) %></b><br><br>
              <%= link_to event.description, event_path(event) %>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="events-upcoming">
        <h3>UPCOMING EVENTS:</h3>
        total(<%= Event.upcoming.all.count %>)<br><br>
        <% @events.each do |event| %>
          <% unless event.date.past? %>
            <div class="event">
              DATE: <b><%= event.date %></b>:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              HOST: <b><%= link_to event.creator.username, user_path(event.creator) %></b><br><br>
              <%= link_to event.description, event_path(event) %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>


