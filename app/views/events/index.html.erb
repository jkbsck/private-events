<div class="event-index">
  <div class="events-list">
    <div class="events-title">
      <h5>EVENTS: </h5>
    </div>
    <div class="events">
      <% @events.each do |event| %>
        
          <div class="event">
            DATE: <b><%= event.date %></b>:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            HOST: <b><%= link_to event.creator.username, user_path(event.creator) %></b><br><br>
            <%= link_to event.description, event_path(event) %>
          </div>
        
      <% end %>
    </div>
  </div>
</div>
