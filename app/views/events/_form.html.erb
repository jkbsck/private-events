<%= form_with model: @event, controller: "events", action: "create", method: "post" do |form| %>
<div class="event-form-container">
  <div class="field event-form">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field event-form">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div class="actions event-form">
    <%= form.submit "Create" %>
  </div>
</div>
<% end %>
