<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash.any? %>
      <div class="navbar-flash">
        <p class="flash">
          <%= flash.notice %>
          <%= flash.alert %>
        </p>
      </div>
    <% end %>
    <div class="navbar">
      <div class="session">
        <% if current_user %>
        <div class="session-items">
          <b><%= current_user.username %></b> is logged in
        </div>
        <div class="session-items">
          <%= link_to 'Log Out', sessions_destroy_path%>
        </div>
        <% else %>
          <div class="session-items">
            <%= link_to 'Log In', new_session_path %>
          </div>
          <div class="session-items">
            <%= link_to 'Sign Up', new_user_path %>
          </div>
        <% end %>
      </div>
      <div class="menu">
        <div class="menu-items">
          <%= link_to 'MAIN PAGE', users_path %>
        </div>
        <div class="menu-items">
          <%= link_to 'NUDES', users_path %>
        </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
